<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/picture"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/contenedorDeArriba"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="60dp">
            <ImageView
                android:id="@+id/dado"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/random"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="MOVIE"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/dado"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RANK"
                android:textColor="#fff"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/dado"
                android:layout_below="@+id/movie"
                />
            </RelativeLayout>

        <Button
            android:id="@+id/loginFacebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4267b2"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Continuar con Facebook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/buttonLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </com.google.android.gms.common.SignInButton>

        <Button
            android:id="@+id/buttonIniciarSesionMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00897b"
            android:drawableLeft="@drawable/email"
            android:text="INICIÁ SESIÓN"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textoNoTeRegistraste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todavia no te registraste?"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp"/>
            <Button
                android:id="@+id/buttonRegistrarse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textoNoTeRegistraste"
                android:backgroundTint="#78909c"
                android:text="CREÁ TU CUENTA"
                android:textAlignment="center"
                android:textColor="#f0f5f5" />
        </LinearLayout>
    </LinearLayout>



</FrameLayout>